@model Biblioteca_uts.Models.LibrosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "_Layout";
}
<style>
    /* Estilo futurista */
    body {
        background-color: #f0f0f0;
        font-family: 'Arial', sans-serif;
    }

    #catalog {
        padding: 50px 0;
    }

    .form-container {
        background-color: #333;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        color: #fff;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .input-group1 {
        position: relative;
    }

        .input-group1 input {
            width: 100%;
            padding: 12px;
            border: none;
            border-bottom: 1px solid #777;
            background-color: transparent;
            color: #fff;
            transition: border-color 0.3s;
        }

            .input-group1 input:focus {
                outline: none;
                border-color: #00aaff;
            }

            .input-group1 input::placeholder {
                color: #999;
            }

        .input-group1::before {
            content: "";
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 1px;
            background-color: #00aaff;
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.3s;
        }

        .input-group1 input:focus + ::before {
            transform: scaleX(1);
        }

    .col-md-4 {
        grid-column: span 2;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sign {
        background-color: #00aaff;
        color: #fff;
        border: none;
        padding: 12px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .sign:hover {
            background-color: #0077cc;
        }
</style>
<link href="~/css/regitro_libro.css" rel="stylesheet" />
<section id="catalog">
    <div class="container">

        <center>
            <!---->
            <div class="form-container">
                <p class="title">REGISTRAR LIBRO</p>
                <form class="form" asp-action="Guardar" asq-controller="Libros" method="post">
                    <!--ADQUISICION-->
                    <div class="input-group1">
                        <input type="number" name="No_Adquisicion" asp-for="No_Adquisicion" placeholder="N°Adquisicion" required>
                    </div>
                    <!--TITULO-->
                    <div class="input-group1">
                        <input type="text" name="Titulo" asp-for="Titulo" placeholder="Titulo" required>
                    </div>
                    <!--Fecha-->
                    <div class="input-group1">
                        <input type="date" asp-for="Fecha_adquisicion" name="Fecha_adquisicion" placeholder="Fecha_adquisicion" required>
                    </div>
                    <!--IBSM-->
                    <div class="input-group1">
                        <input type="text" name="IBSN" asp-for="Ibsn" placeholder="IBSN" required>
                    </div>
                    <!--Clasificacion-->
                    <div class="input-group1">
                        <input type="text" name="Clasificacion" asp-for="Clasificacion" placeholder="Clasificacion" required>
                    </div>
                    <!--Numero de estante-->
                    <div class="input-group1">
                        <input type="number" name="No_Estante" asp-for="No_Estante" placeholder="Estante" required>
                    </div>

                    <!--Procedencia-->
                    <div class="input-group1">
                        <input type="text" name="Procedencia" asp-for="Procedencia" placeholder=" Procedencia" required>
                    </div>
                    <!--Factura-->
                    <div class="input-group1">
                        <input type="text" name="No_factura" asp-for="No_factura" placeholder="N°factura" required>
                    </div>

                    <!--boton de registro-->
                    <br>
                    <div class="col-md-4 mb-3">
                        <button type="submit" class="sign">REGISTRAR</button>
                    </div>

                </form>
            </div>
        </center>
    </div>
</section>
@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["Mensaje"]
    </div>
}