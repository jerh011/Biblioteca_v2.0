@model Biblioteca_uts.Models.LibrosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "_Layout";
}
<style>
    /* Estilo futurista */
    /* Estilos generales */
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Estilos para la barra de navegación */
    .navbar {
        background-color: #333;
        padding: 10px;
        text-align: center;
    }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            font-size: 16px;
        }

    /* Estilos para el pie de página */
    .footer {
        background-color: #333;
        padding: 10px;
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
    }

    /* Estilos para el formulario de registro */
    .form-container {
        padding: 20px;
        border-radius: 10px;
        background: rgba(0, 0, 0, 0.7);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        width: 80%;
        max-width: 400px;
        text-align: center;
        margin: 20px auto;
    }

    .title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .input-group1 {
        margin: 10px 0;
        text-align: left;
    }

        .input-group1 label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .input-group1 input[type="number"],
        .input-group1 input[type="text"],
        .input-group1 input[type="date"] {
            padding: 8px;
            width: 100%;
            border: none;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            font-size: 14px;
            outline: none;
        }

            .input-group1 input[type="number"]::placeholder,
            .input-group1 input[type="date"]::placeholder {
                color: #aaaaaa;
            }

    .sign {
        display: inline-block;
        padding: 10px 18px;
        font-size: 16px;
        background-color: #1e90ff;
        color: #ffffff;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .sign:hover {
            background-color: #007bff;
        }
</style>
<link href="~/css/regitro_libro.css" rel="stylesheet" />
<section id="catalog">
    <div class="container">

        <center>
            <!---->
            <div class="form-container">
                <p class="title">REGISTRAR LIBRO</p>
                <form class="form" asp-action="Guardar" asq-controller="Libros" method="post">
                    <!--ADQUISICION-->
                    <div class="input-group1">
                        <label for="No_Adquisicion">No de adquisición</label>
                        <input type="number" name="No_Adquisicion" asp-for="No_Adquisicion" placeholder="N°Adquisicion" required>
                    </div>
                    <!--TITULO-->
                    <div class="input-group1">
                        <label for="Titulo">Titulo</label>
                        <input type="text" name="Titulo" asp-for="Titulo" placeholder="Titulo" required>
                    </div>
                    <!--Fecha-->
                    <div class="input-group1">
                        <label for="Fecha_adquisicion">Fecha de adquisicion</label>
                        <input type="date" asp-for="Fecha_adquisicion" name="Fecha_adquisicion" placeholder="Fecha_adquisicion" required>
                    </div>
                    <!--IBSM-->
                    <div class="input-group1">
                        <label for="IBSN">IBSN</label>
                        <input type="text" name="IBSN" asp-for="Ibsn" placeholder="IBSN" required>
                    </div>
                    <!--Clasificacion-->
                    <div class="input-group1">
                        <label for="Clasificacion">Clasificacion</label>
                        <input type="text" name="Clasificacion" asp-for="Clasificacion" placeholder="Clasificacion" required>
                    </div>
                    <!--Numero de estante-->
                    <div class="input-group1">
                        <label for="No_Estante">No de estante</label>
                        <input type="number" name="No_Estante" asp-for="No_Estante" placeholder="Estante" required>
                    </div>

                    <!--Procedencia-->
                    <div class="input-group1">
                        <label for="Procedencia">Procedencia</label>
                        <input type="text" name="Procedencia" asp-for="Procedencia" placeholder=" Procedencia" required>
                    </div>
                    <!--Factura-->
                    <div class="input-group1">
                        <label for="No_factura">No de factura</label>
                        <input type="text" name="No_factura" asp-for="No_factura" placeholder="N°factura" required>
                    </div>

                    <!--boton de registro-->
                    <br>
                    <div class="col-md-4 mb-3">
                        <button type="submit" class="sign">REGISTRAR</button>
                    </div>

                </form>
            </div>
        </center>
    </div>
</section>
@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["Mensaje"]
    </div>
}