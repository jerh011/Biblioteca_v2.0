@model Biblioteca_uts.Models.UsariosModels;

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Responsive and Futuristic Login Form">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #121212; /* Dark background color */
            font-family: Arial, sans-serif;
            color: #ffffff; /* Light text color */
        }

        .login-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #333;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
            color: #ffffff; /* Light text color */
        }

        .form-label {
            color: #ffffff; /* Light text color */
        }

        .form-control {
            background-color: #333; /* Dark form input background */
            border: 1px solid #555; /* Darker form input border */
            color: #ffffff; /* Light text color */
        }

        .btn-primary {
            background-color: #1877F2; /* Facebook Blue Color */
            border: none;
        }

        .btn-secondary {
            background-color: #333; /* Dark button background */
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto mt-5">
                <div class="login-container">
                    <h1 class="login-title">@ViewData["Title"]</h1>
                    <form asp-action="Login" asp-controller="LoginR" method="post">
                        <div class="mb-3">
                            <label for="Usuario" class="form-label">Usuario o correo</label>
                            <input type="text" class="form-control" asp-for="Usuario" required>
                        </div>
                        <div class="mb-3">
                            <label for="Contraseña" class="form-label">Clave</label>
                            <input type="password" class="form-control" asp-for="Contraseña" required>
                        </div>
                        <button class="btn btn-primary w-100 mb-3" type="submit">Iniciar Sesión</button>
                        <span><a asp-area="" asp-controller="LoginR" asp-action="Registro">Aun no tienes cuenta?</a></span>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
