@model Biblioteca_uts.Models.PrestamosModels

@{
    ViewData["Title"] = "Editar";
    Layout = "_Layout";
}
<style>
    /* Estilos generales */
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Estilos para la barra de navegación */
    .navbar {
        background-color: #333;
        padding: 10px;
        text-align: center;
    }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            font-size: 16px;
        }

    /* Estilos para el pie de página */
    .footer {
        background-color: #333;
        padding: 10px;
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
    }

    /* Estilos para el formulario de registro */
    .form-container {
        padding: 20px;
        border-radius: 10px;
        background: rgba(0, 0, 0, 0.7);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        width: 80%;
        max-width: 400px;
        text-align: center;
        margin: 20px auto;
    }

    .title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .input-group1 {
        margin: 10px 0;
        text-align: left;
    }

        .input-group1 label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .input-group1 input[type="number"],
        .input-group1 input[type="date"] {
            padding: 8px;
            width: 100%;
            border: none;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            font-size: 14px;
            outline: none;
        }

            .input-group1 input[type="number"]::placeholder,
            .input-group1 input[type="date"]::placeholder {
                color: #aaaaaa;
            }

    .sign {
        display: inline-block;
        padding: 10px 18px;
        font-size: 16px;
        background-color: #1e90ff;
        color: #ffffff;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .sign:hover {
            background-color: #007bff;
        }
</style>
<h1>Editar</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" asq-controller="Prestamos">


            <input asp-for="IdPrestamo" type="hidden" class="form-control" />


            <div class="form-group">
                <label asp-for="Identificador" class="control-label"></label>
                <input asp-for="Identificador" type="text" class="form-control" />
                <span asp-validation-for="Identificador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_prestamo" class="control-label"></label>
                <input asp-for="Fecha_prestamo" type="date" class="form-control" />
                <span asp-validation-for="Fecha_prestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_devolucion" class="control-label"></label>
                <input asp-for="Fecha_devolucion" type="date" class="form-control" />
                <span asp-validation-for="Fecha_devolucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="No_Adquisicion" class="control-label"></label>
                <input asp-for="No_Adquisicion" type="text" class="form-control" />
                <span asp-validation-for="No_Adquisicion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Listar" asp-controller="Prestamos" class="btn btn-warning btn-sn">volver a la lista</a>
            </div>
        </form>
    </div>
</div>


@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["Mensaje"]
    </div>
}