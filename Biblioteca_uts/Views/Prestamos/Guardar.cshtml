@model Biblioteca_uts.Models.PrestamosModels

@{
    ViewData["Title"] = "Guardar";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca_uts</title>
    <style>
        /* Estilos generales */
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Estilos para la barra de navegación */
        .navbar {
            background-color: #333;
            padding: 10px;
            text-align: center;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                padding: 10px 20px;
                font-size: 16px;
            }

        /* Estilos para el pie de página */
        .footer {
            background-color: #333;
            padding: 10px;
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        /* Estilos para el formulario de registro */
        .form-container {
            padding: 20px;
            border-radius: 10px;
            background: rgba(0, 0, 0, 0.7);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            width: 80%;
            max-width: 400px;
            text-align: center;
            margin: 20px auto;
        }

        .title {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .input-group1 {
            margin: 10px 0;
            text-align: left;
        }

            .input-group1 label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .input-group1 input[type="number"],
            .input-group1 input[type="date"] {
                padding: 8px;
                width: 100%;
                border: none;
                border-radius: 10px;
                background-color: rgba(255, 255, 255, 0.1);
                color: #ffffff;
                font-size: 14px;
                outline: none;
            }

                .input-group1 input[type="number"]::placeholder,
                .input-group1 input[type="date"]::placeholder {
                    color: #aaaaaa;
                }

        .sign {
            display: inline-block;
            padding: 10px 18px;
            font-size: 16px;
            background-color: #1e90ff;
            color: #ffffff;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .sign:hover {
                background-color: #007bff;
            }
    </style>
</head>
<body>


    <div class="form-container">
        <p class="title">REGISTRAR PRÉSTAMOS</p>
        <form class="form" asp-action="Guardar" asp-controller="Prestamos" method="post">
            <!-- Campo de Identificador -->
            <div class="input-group1">
                <label class="control-label">Identificador</label><br>
                <input type="number" name="Identificador" asp-for="Identificador" placeholder="Identificador del Usuario" required>
                <span asp-validation-for="Identificador" class="text-danger"></span>
            </div>

            <!-- Campo de Fecha de Préstamo -->
            <div class="input-group1">
                <label class="control-label">Prestamo</label><br>
                <input type="date" name="Fecha_prestamo" asp-for="Fecha_prestamo" placeholder="Fecha del prestamo" required>
            </div>

            <!-- Campo de Fecha de Devolución -->
            <div class="input-group1">
                <label class="control-label">Devolucion</label><br>
                <input type="date" asp-for="Fecha_devolucion" name="Fecha_devolucion" placeholder="Fecha de la devolucion" required>
            </div>

            <!-- Campo de Número de Adquisición -->
            <div class="input-group1">
                <label class="control-label">Numero de adquisición</label><br>
                <input type="number" name="No_Adquisicion" asp-for="No_Adquisicion" placeholder="No_Adquisicion DEL LIBRO" required>
            </div>

            <!-- Botón de registro -->
            <div class="col-md-4 mb-3">
                <button type="submit" class="sign">REGISTRAR</button>
            </div>
        </form>
    </div>


</body>

</html>
@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["Mensaje"]
    </div>
}