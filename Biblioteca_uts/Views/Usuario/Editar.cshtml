@model Biblioteca_uts.Models.UsariosModels

@{
    ViewData["Title"] = "Editar";
    Layout = "_Layout";
}
<style>
    body {
        background-color: #111;
        color: #fff;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        font-size: 18px;
    }

    .form-control {
        background-color: #222;
        border: none;
        color: #fff;
    }

    .text-danger {
        color: #ff6161;
    }

    .btn-primary {
        background-color: #00c7ff;
        border-color: #00c7ff;
    }

        .btn-primary:hover {
            background-color: #008bff;
            border-color: #008bff;
        }

    .btn-warning {
        background-color: #ff8c00;
        border-color: #ff8c00;
    }

        .btn-warning:hover {
            background-color: #ff6b00;
            border-color: #ff6b00;
        }
</style>
<h1>Editar Usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" asq-controller="Usuario">
            <div class="form-group">
                <input asp-for="Identificador" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApePa" class="control-label"></label>
                <input asp-for="ApePa" class="form-control" />
                <span asp-validation-for="ApePa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApeMa" class="control-label"></label>
                <input asp-for="ApeMa" class="form-control" />
                <span asp-validation-for="ApeMa" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Calle" class="control-label"></label>
                <input asp-for="Calle" class="form-control" />
                <span asp-validation-for="Calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colonia" class="control-label"></label>
                <input asp-for="Colonia" class="form-control" />
                <span asp-validation-for="Colonia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NroCasa" class="control-label"></label>
                <input asp-for="NroCasa" class="form-control" />
                <span asp-validation-for="NroCasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipo" class="control-label"></label>
                <input asp-for="tipo" class="form-control" />
                <span asp-validation-for="tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label"></label>
                <input asp-for="Contraseña" type="password" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Listar" asp-controller="Usuario" class="btn btn-warning btn-sn">volver a la lista</a>
            </div>
        </form>
    </div>
</div>


@if (ViewData["Mensaje"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewData["Mensaje"]
    </div>
}